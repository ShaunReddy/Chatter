<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_rvItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_cv_elevation"
    app:cardCornerRadius="@dimen/dimen_cv_radius"
    android:layout_marginLeft="@dimen/dimen_cv_marginSides"
    android:layout_marginRight="@dimen/dimen_cv_marginSides"
    android:layout_marginTop="@dimen/dimen_cv_marginTopBottom"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_tv_name_size"
        android:layout_margin="@dimen/dimen_tv_margin"
        />
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_tv_margin"
        android:textSize="@dimen/dimen_tv_amount_size"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>