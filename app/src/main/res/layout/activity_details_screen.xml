<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_detailsScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_cv_margin"
    app:cardCornerRadius="@dimen/dimen_cv_radius"
    android:elevation="@dimen/dimen_cv_elevation"
    tools:context=".view.details.DetailsScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/details_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_tv_name_size"
            android:layout_margin="@dimen/dimen_tv_margin"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:id="@+id/details_tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_tv_margin"
            android:textSize="@dimen/dimen_tv_amount_size"
            android:textColor="@color/colorWhite"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/details_tv_ROI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_tv_margin"
            android:textSize="@dimen/dimen_tv_amount_size"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>